# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "sysdata"
order += "disk /"
order += "ethernet enp0s31f6"
order += "wifi wlp1s0"
order += "volume_status"
#order += "weather_yahoo"
order += "spotify"
order += "clock"

sysdata {
}

ethernet enp2s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "Net: %ip"
        format_down = "Net: down"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

cpu_usage {
        format = "CPU: %usage"
}

disk "/" {
        format = "%avail"
}

volume_status {
}

spotify {
	format_down = ""
}

weather_yahoo {
	woeid = "638242"
	format_today = "Now: {icon}{temp}°{units} {text}"
	forecast_days = 3		
}

clock {
	format = "Berlin {Europe/Berlin}"
	format_time = "%Y-%m-%d %H:%M:%S"
}
