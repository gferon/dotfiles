# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 1
}

order += "sysdata"
order += "spotify"
order += "battery_level"
order += "wifi"
order += "keyboard_layout"
order += "volume_status"
order += "clock"

sysdata {
}

ethernet enp2s0 {
    # if you use %speed, i3status requires root privileges
    format_up = "Net: %ip"
    format_down = "Net: down"
}

cpu_usage {
    format = "CPU: %usage"
}

diskdata {
}

#keyboard_layout {
#    on_click 1 = "exec setxkbmap us; refresh"
#    on_click 3 = "exec setxkbmap fr; refresh"
#}

battery_level {
    format = "Battery: {percent}%" 
}

volume_status {
    button_up = 1
    button_down = 3
    button_mute = 2

    thresholds = [
        (0, "#FF0000"),
        (10, "#E2571E"),
        (20, "#FF7F00"),
        (30, "#FFFF00"),
        (40, "#00FF00"),
        (50, "#96BF33"),
        (60, "#0000FF"),
        (70, "#4B0082"),
        (80, "#8B00FF"),
        (90, "#FFFFFF")
    ]
}

spotify {
    format_down = ""
}

clock {
    format = ["{Europe/Berlin}"]
    format_time = "%Y-%m-%d %H:%M"
}

wifi {
    on_click 1 = "exec gnome-control-center network"
    on_click 3 = "exec [ $(nmcli radio wifi) = 'enabled' ] && nmcli radio wifi off || nmcli radio wifi on"
}
